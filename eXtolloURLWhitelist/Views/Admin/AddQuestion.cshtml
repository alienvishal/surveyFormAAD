@model AddQuestionViewModel
@{
    ViewBag.Title = "Add Question";
}

<h2 style="margin-top:100px;">Add Question</h2>

<form method="post" id="frm_submit" asp-antiforgery="true">
    <div class="form-horizontal">
        <hr />
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="UrlText">URL Text<span style="color:red">*</span></label>
            <div class="col-md-10">
                <input asp-for="UrlText" autocomplete="off" class="form-control" />
                <span class="field-validation-valid text-danger" asp-validation-for="UrlText"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="new-btn">
                    <i class="fa fa-spinner fa-spin" style="display:none;"></i>Add URL
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script type="text/javascript">

        $('#frm_submit').submit(function () {
            $('.fa.fa-spinner.fa-spin').show();
        })
    </script>

    @if (ViewBag.QuestionAdded != null)
    {
        <script>
            toastr.options.progressBar = true;
            toastr.success("@ViewBag.QuestionAdded")
        </script>
    }
}